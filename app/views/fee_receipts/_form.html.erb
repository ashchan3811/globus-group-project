<%= render 'layouts/errors', object: @fee_receipt %>
<%= form_for(@fee_receipt, html: {class: 'form-horizontal'}) do |f| %>
  
  <div class="form-group">
       <%= f.label(:student_id,'Student', class: 'col-sm-2 col-md-2 control-label') %>
       <div class="col-md-10 col-sm-10">
         <%= f.collection_select :student_id, Student.all, :id, :enrollment,{},{ :class => 'form-control'}  %>
       </div>
  </div>
     
 <div class="form-group">
   <%= f.label(:semester_id,'Semester', class: 'col-sm-2 col-md-2 control-label') %>
   <div class="col-md-10 col-sm-10">
     <%= f.collection_select :semester_id, Semester.all, :id, :name,{},{ :class => 'form-control'}  %>
   </div>
 </div>
 
 <div class="form-group">
       <%= f.label(:date,'Payment Date',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.date_select(:date,:start_year => 2000, :end_year => 2017,class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
           <%= f.label(:amount, class: 'col-sm-2 col-md-2 control-label') %>
           <div class="col-md-10 col-sm-10">
             <%= f.number_field(:amount ,placeholder: 'Amount', class: 'form-control') %>
           </div>
  </div>
  <div class="form-group">
           <%= f.label(:receipt_no, class: 'col-sm-2 col-md-2 control-label') %>
           <div class="col-md-10 col-sm-10">
             <%= f.number_field(:receipt_no ,placeholder: 'Reciept no.', class: 'form-control') %>
           </div>
  </div>

  <div class="form-group">
       <%= f.label(:description,'Description',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_area(:description, rows: 5, placeholder: 'Description',class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2 col-md-10 col-md-offset-2">
      <%= f.submit class: 'btn btn-danger btn-block'%>
    </div>
  </div>
<% end %>
