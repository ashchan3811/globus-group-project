<div class="row">
<%= form_tag(list_students_path,:method => 'get',class: 'form-inline')do %>
    <div class="form-group">
      <%= label_tag(:order_by, 'Order By' ,class: 'control-label') %>
      <%= select_tag(:order_by, options_for_select([['Branch',:branch_id], ['Semester',:semester_id], ['Batch',:batch_id]]), class: 'form-control') %>
    </div>
    <div class="form-group">
        <%= submit_tag "Order", class: 'btn btn-success' %>
    </div>
<% end %>
</div>
<hr/>
<div class="row">
<table class="table table-stripped table-hover">
  <thead>
    <tr class="warning">
      <th>Name</th>
      <th>Enrollment</th>
      <th>College</th>
      <th>Semester</th>
      <th>Batch</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="default">
        <td><%= student.name %></td>
        <td><%= student.enrollment %></td>
        <td><%= student.college.name if student.college_id? %></td>
        <td><%= student.semester.name if student.semester_id? %></td>
        <td><%= student.branch.name if student.branch_id?%></td>
        <td><%= link_to 'Show', student  , class: 'btn btn-xs btn-info'%></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-xs btn-success' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-xs btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>  
</div>


<hr/>
<%= link_to 'New Student', new_student_path , class: 'btn btn-sm btn-warning' %>

