<table class="table table-stripped table-hover">
  <thead>
    <tr class="danger">
      <th>Name</th>
      <th>Email</th>
      <th>College</th>
      <th>Address</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr >
        <td><%= faculty.name %></td>
        <td><%= faculty.email %></td>
        <td><%= faculty.college.name %></td>
        <td><%= faculty.address %></td>
        <td><%= link_to 'Show', faculty ,class:'btn btn-xs btn-success'%></td>
        <td><%= link_to 'Edit', edit_faculty_path(faculty) ,class:'btn btn-xs btn-warning'%></td>
        <td><%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-xs btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Faculty', new_faculty_path , class: 'btn btn-sm btn-info' %>
