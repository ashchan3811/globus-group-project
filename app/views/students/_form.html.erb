<%= render 'layouts/errors', object: @student %>
<%= form_for(@student,html:{class: 'form-horizontal'}) do |f| %>

  <div class="form-group">
       <%= f.label(:name,'First Name',class: 'col-lg-2 col-sm-2 col-md-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_field(:name, placeholder: 'First Name',class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:enrollment,'Enrollment',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_field(:enrollment, placeholder: 'Enrollment',class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:email,'Email',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_field(:email, placeholder: 'Email',class: 'form-control') %>
       </div>
  </div>
  <% if @student.new_record? %>
    <div class="form-group">
         <%= f.label(:password,'Password',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
         <div class="col-lg-10 col-sm-10 col-md-10">
           <%= f.password_field(:password, placeholder: 'Password',class: 'form-control') %>
         </div>
    </div>
    
    <div class="form-group">
         <%= f.label(:password_confirmation,'Confirm Password',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
         <div class="col-lg-10 col-sm-10 col-md-10">
           <%= f.password_field(:password_confirmation, placeholder: 'Confirm Password',class: 'form-control') %>
         </div>
    </div>
  <% end %>
  <div class="form-group">
       <%= f.label(:college_id,'College', class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.collection_select :college_id, College.all, :id, :name,{},{ :class => 'form-control'}  %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:semester_id,'Semseter', class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.collection_select :semester_id, Semester.all, :id, :name,{},{ :class => 'form-control'}  %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:branch_id,'Branch', class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.collection_select :branch_id, Branch.all, :id, :name,{},{ :class => 'form-control'}  %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:batch_id,'Batch', class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.collection_select :batch_id, Batch.all, :id, :year,{},{ :class => 'form-control'}  %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:dateofbirth,'Date of Birth',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.date_select(:dateofbirth,:start_year => 1980, :end_year => 2013, placeholder: 'Date of Birth',class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:father_name,'Father Name',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_field(:father_name, placeholder: 'Father Name',class: 'form-control') %>
       </div>
  </div>
  
  <div class="form-group">
       <%= f.label(:mothe_name,'Mother Name',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_field(:mothe_name, placeholder: 'Mother Name',class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:phone,'Phone no',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_field(:phone, placeholder: 'Phone no',class: 'form-control') %>
       </div>
  </div>
  
  <div class="form-group">
       <%= f.label(:permanent_address,'Permanent Address',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_area(:permanent_address, rows: 5, placeholder: 'Address',class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
       <%= f.label(:current_address,'Current Address',class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
       <div class="col-lg-10 col-sm-10 col-md-10">
         <%= f.text_area(:current_address, rows: 5, placeholder: 'Address',class: 'form-control') %>
       </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2 col-md-10 col-md-offset-2">
      <%= f.submit class: 'btn btn-danger btn-block'%>
    </div>
  </div>
<% end %>
