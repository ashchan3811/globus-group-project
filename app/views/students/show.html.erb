<div class="container">
  <div class="jumbotron">
    <h1><%= @student.name %></h1>
    <blockquote>
      <p>s/o <%= @student.father_name %></p>
      <small><%= @student.enrollment %></small>
    </blockquote>
     <p ><a class="btn btn-success btn-lg" href="#details">Know More</a></p>
     <p  id="details"></p>
     
  </div>

<div  class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Personal Details</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover ">
        <tr>
          <th>Name</th>
          <td><%= @student.name %></th>
        </tr>
        <tr>
          <th>Enrollment</th>
          <td><%= @student.enrollment %></th>
        </tr>
        <tr>
          <th>College</th>
          <td><%= @student.college.name %></th>
        </tr>
        <tr>
          <th>Semester</th>
          <td><%= @student.semester.name %></th>
        </tr>
        <tr>
          <th>Branch</th>
          <td><%= @student.branch %></th>
        </tr>
        <tr>
          <th>Batch</th>
          <td><%= @student.batch %></th>
        </tr>
        <tr>
          <th>Date of Birth</th>
          <td><%= @student.dateofbirth %></th>
        </tr>
        <tr>
          <th>Father name</th>
          <td><%= @student.father_name %></th>
        </tr>
        <tr>
          <th>Mother name</th>
          <td><%= @student.mothe_name %></th>
        </tr>
        <tr>
          <th>Phone no.</th>
          <td><%= @student.phone %></th>
        </tr>
        <tr>
          <th>Current address</th>
          <td><%= @student.current_address %></th>
        </tr>
        <tr>
          <th>Permanent address</th>
          <td><%= @student.permanent_address %></th>
        </tr>
    </table> 
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Academic History</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Semester</th>
          <th>CGPA</th>
          <th>SGPA</th>
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
        <tr  class="default">
          <td>1</td>
          <td>Column content</td>
          <td>Column content</td>
          <td><%= link_to 'Result' , { :action => "result", :semester_id => @student.semester_id } ,class:'btn btn-xs btn-info' %></td>
        </tr>
      </tbody>
    </table> 
  </div>
</div>

<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title">Fee Details</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Semester</th>
          <th>Amount</th>
          <th>Date</th>
          <th>Paid By</th>
        </tr>
      </thead>
      <tbody>
        <tr  class="success">
          <td>1</td>
          <td>Column content</td>
          <td>Column content</td>
          <td>Column content</td>
        </tr>
      </tbody>
    </table> 
  </div>
</div>

<% if admin_logged_in? %>
  <%= link_to 'Back to Admin' , list_students_path , class: 'btn btn-success btn-sm' %>
<% end %>