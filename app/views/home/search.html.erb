<div class="page-header">
  <h2>Search Result For Query - "<%= params[:enrollment] %>"</h2>
</div>

<% if @student.present? %>

<div class="container">
<div  class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Personal Details</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover ">
        <tr>
          <th>Name</th>
          <td><%= @student.name %></th>
        </tr>
        <tr>
          <th>Enrollment</th>
          <td><%= @student.enrollment %></th>
        </tr>
        <tr>
          <th>College</th>
          <td><%= @student.college.name %></th>
        </tr>
        <tr>
          <th>Semester</th>
          <td><%= @student.semester.name %></th>
        </tr>
        <tr>
          <th>Branch</th>
          <td><%= @student.branch.name %></th>
        </tr>
        <tr>
          <th>Batch</th>
          <td><%= @student.batch.year %></th>
        </tr>
        <tr>
          <th>Date of Birth</th>
          <td><%= @student.dateofbirth %></th>
        </tr>
        <tr>
          <th>Father name</th>
          <td><%= @student.father_name %></th>
        </tr>
        <tr>
          <th>Mother name</th>
          <td><%= @student.mothe_name %></th>
        </tr>
        <tr>
          <th>Phone no.</th>
          <td><%= @student.phone %></th>
        </tr>
        <tr>
          <th>Current address</th>
          <td><%= @student.current_address %></th>
        </tr>
        <tr>
          <th>Permanent address</th>
          <td><%= @student.permanent_address %></th>
        </tr>
    </table> 
  </div>
</div>
</div>

<% else %>

<h3>No Result Found</h3>

<% end %>