  <div class="page-header">
    <h1>
      Student - Login Here
    </h1>
  </div>
  
  <div class='col-md-6 col-md-offset-3 col-xs-offset-2 col-lg-6 col-xs-8'>
    <%= form_tag('student_login', class: 'form-horizontal') do %>
    
    <div class="form-group">
      <%= label_tag :enrollment, 'Enrollment', class: 'col-sm-2 col-md-2 control-label' %>
      <div class="col-md-10 col-sm-10">
        <%= text_field_tag(:enrollment ,'',class: "form-control") %>
      </div>
    </div>
    
    <div class="form-group">
      <%= label_tag :password,'Password', class: 'col-sm-2 col-md-2 control-label' %>
      <div class="col-md-10 col-sm-10">
        <%= password_field_tag(:password,'', class: 'form-control') %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-10 col-sm-10 col-md-offset-2 col-sm-offset-2">
        <%= submit_tag "Login", class: 'btn btn-block btn-success' %>
      </div>
    </div>
    <% end %>
  </div>
