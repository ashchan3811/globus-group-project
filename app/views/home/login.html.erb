<h2 class="text-center">Login Here </h2>
<hr/>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
    <%= form_tag({action: 'login', method: 'post'},class: 'form-horizontal')do %>

        <div class="form-group">
          <%= label_tag(:email, 'Email' ,class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
          <div class="col-md-10 col-lg-10 col-sm-10">
            <%= text_field_tag(:email, '',placeholder: 'Put your id here' , class: 'form-control') %>
          </div>
        </div>
        
        <div class="form-group">
          <%= label_tag(:password , 'Password' , class: 'col-lg-2 col-md-2 col-sm-2 control-label') %>
          <div class="col-md-10 col-lg-10 col-sm-10">
            <%= password_field_tag(:password,'',placeholder: 'Password Here', class: 'form-control') %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10">
            <%= submit_tag "Login", class: 'btn btn-success' %>
          </div>
        </div>
        
        
    <% end %>
      
  </div>
</div>
