<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @subject.name %></h1>
</div>
<div  class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Subject Details</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover ">
        <tr>
          <th>Name</th>
          <td><%= @subject.name %></th>
        </tr>
        <tr>
          <th>Code</th>
          <td><%= @subject.code %></th>
        </tr>
        <tr>
          <th>Semester</th>
          <td><%= @subject.semester.id %></th>
        </tr>
        <tr>
          <th>Syllabus</th>
          <td><%= @subject.syllabus.name %></th>
        </tr>
        <tr>
          <th>Branch</th>
          <td><%= @subject.branch.name %></th>
        </tr>
    </table> 
  </div>
</div>

<hr/>
<%= link_to 'Edit', edit_subject_path(@subject)  , class: 'btn btn-sm btn-info'%>
<%= link_to 'Back', subjects_path , class: 'btn btn-sm btn-danger'%>

<% if faculty_logged_in? %>
  <div class="pull-right">
    <%= link_to 'Faculty Home', home_faculty_path(@faculty) , class: 'btn btn-sm btn-success'%>
  </div>
<% end %>