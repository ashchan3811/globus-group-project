<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Listing Subjects - Branch : <%= @branch.name %></h1>
</div>


<table class="table table-hover table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject Code</th>
      <th>Semester</th>
      <th>Branch</th>
      <th>Practical/Theory</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <% if subject.subject_type.id == 2 %> 
        <tr class=default>
      <% else %>
        <tr class=danger>
       <% end %>
        <td><%= subject.name %></td>
        <td><%= subject.code %></td>
        <td><%= subject.semester.id %></td>
        <td><%= subject.branch.name %></td>
        <td><%= subject.subject_type.name %></td>
        <td><%= link_to 'Show', subject, class:'btn btn-xs btn-info' %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) , class:'btn btn-xs btn-danger'%></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-xs btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/>

<%= link_to 'New Subject', new_subject_path , class:'btn btn-sm btn-success'%>