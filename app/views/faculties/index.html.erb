<div class="page-header">
  <h2>Faculty Home Page</h2>
</div>
<div class="row">
<div class="col-md-3 col-sm-3">
  <%= render 'sidemenu' %>
</div>
<div class="col-sm-9 col-md-9">
  <% if @students.present? %>
      <table class="table table-stripped table-hover">
        <thead>
          <tr class="info">
            <th>Name</th>
            <th>Enrollment</th>
            <th>Semester</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
          <tr class="default">
            <td><%= student.name %></td>
            <td><%= student.enrollment %></td>
            <td><%= student.semester.name %></td>
            <td><%= link_to 'Show', student  , class: 'btn btn-xs btn-info'%></td>
            <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-xs btn-success' %></td>
            <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-xs btn-danger'%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  <% end %>
</div>
</div>
