<div class="page-header">
  <h1>Change Password - <%= @faculty.name %></h1>
</div>
<div class="row">
<div class="col-md-8 col-sm-8 col-sm-offset-2 col-md-offset-2">
  <%= form_tag('change_password', class: 'form-horizontal') do %>
  <div class="form-group">
        <%= label_tag(:old_password , 'Old Password' , class: 'col-md-3 col-sm-3 control-label') %>
        <div class="col-md-9  col-sm-9">
          <%= password_field_tag(:old_password,'',placeholder: 'Old Password Here', class: 'form-control') %>
        </div>
  </div>
  <div class="form-group">
        <%= label_tag(:new_password , 'New Password' , class: 'col-md-3 col-sm-3 control-label') %>
        <div class="col-md-9  col-sm-9">
          <%= password_field_tag(:new_password,'',placeholder: 'New Password Here', class: 'form-control') %>
        </div>
  </div>
  <div class="form-group">
      <div class="col-md-9  col-sm-9 col-sm-offset-3 col-md-offset-3 ">
        <%= submit_tag "Chnage Password", class: 'btn btn-block btn-success' %>
      </div>
  </div>
  <% end %> 
</div>
</div>
<hr/>
<%= link_to 'Back to Faculty Home' , @faculty , class: 'btn btn-sm btn-warning' %>