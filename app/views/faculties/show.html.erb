<div class="page-header">
  <h1><%= @faculty.name %></h1>
</div>
<div  class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Personal Details</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover ">
        <tr>
          <th>Name</th>
          <td><%= @faculty.name %></th>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= @faculty.email %></th>
        </tr>
        <tr>
          <th>College</th>
          <td><%= @faculty.college.name %></th>
        </tr>
        <tr>
          <th>Branch</th>
          <td><%= @faculty.branch.name %></th>
        </tr>
        <tr>
          <th>Current address</th>
          <td><%= @faculty.address %></th>
        </tr>
    </table> 
  </div>
</div>

<hr/>

<% if faculty_logged_in? %>
  <%= link_to 'Edit Profile', edit_faculty_path(@faculty) , class: 'btn btn-sm btn-info'%>
  <div class="pull-right">
    <%= link_to 'Faculty Home', home_faculty_path(@faculty) , class: 'btn btn-sm btn-success'%>
  </div>
<% end %>