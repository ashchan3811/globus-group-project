<%= render 'layouts/errors', object: @faculty %>

<%= form_for(@faculty, html: {class: 'form-horizontal'}) do |f| %>

  <div class="form-group">
       <%= f.label(:name,'Name',class: 'col-lg-2 col-md-2 control-label') %>
       <div class="col-md-10 col-lg-10">
         <%= f.text_field(:name, placeholder: 'Name',class: 'form-control') %>
       </div>
  </div>
  
  <div class="form-group">
       <%= f.label(:email,'Email',class: 'col-lg-2 col-md-2 control-label') %>
       <div class="col-md-10 col-lg-10">
         <%= f.text_field(:email, placeholder: 'Email',class: 'form-control') %>
       </div>
  </div>
  
  <% if @faculty.new_record? %>
      <div class="form-group">
           <%= f.label(:password, class: 'col-lg-2 col-md-2 control-label') %>
           <div class="col-md-10 col-lg-10">
             <%= f.password_field(:password ,placeholder: 'Password', class: 'form-control') %>
           </div>
     </div>
   
     <div class="form-group">
       <%= f.label(:password_confirmation,'Confirm Password', class: 'col-lg-2 col-md-2 control-label') %>
       <div class="col-md-10 col-lg-10">
         <%= f.password_field(:password_confirmation,placeholder: 'Confirm Password', class: 'form-control') %>
       </div>
     </div>
  <% end %>
  
  <div class="form-group">
       <%= f.label(:branch_id,'Branch', class: 'col-lg-2 col-md-2 control-label') %>
       <div class="col-md-10 col-lg-10">
         <%= f.collection_select :branch_id, Branch.all, :id, :name,{},{ :class => 'form-control'}  %>
       </div>
  </div>
     
 <div class="form-group">
   <%= f.label(:college_id,'College', class: 'col-lg-2 col-md-2 control-label') %>
   <div class="col-md-10 col-lg-10">
     <%= f.collection_select :college_id, College.all, :id, :name,{},{ :class => 'form-control'}  %>
   </div>
 </div>
 
 <div class="form-group">
       <%= f.label(:address,'Address',class: 'col-lg-2 col-md-2 control-label') %>
       <div class="col-md-10 col-lg-10">
         <%= f.text_area(:address, rows: 4, placeholder: 'Where do you live? Please write here.',class: 'form-control') %>
       </div>
  </div>
 <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2 col-md-10 col-md-offset-2">
      <%= f.submit class: 'btn btn-danger btn-block'%>
    </div>
  </div>
<% end %>
