<div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
        <% flash.each do |message_type , message| %>
            <div class="alert alert-<%= message_type %>">
            <%= message %>
           <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        <% end %>
    </div>
</div>